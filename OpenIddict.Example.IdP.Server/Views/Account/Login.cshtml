@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Identity
@using OpenIddict.Example.IdP.Persistence.Models
@using OpenIddict.Example.IdP.Server.ViewModels.Account
@model LoginViewModel
@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<main class="signup-container">
    <div class="login-wrapper">
        <h1 class="heading-primary">Log In<span class="span-accent">[OpenIddict.Example]</span></h1>        
        <p class="text-mute">Enter your credentials to access your account.</p>
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="signup-form" role="form">
            <label class="inp">
                <input asp-for="Email" type="email" class="input-text" placeholder="&nbsp;">
                <label asp-for="Email" class="label"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
                <span class="input-icon"><i class="fa-solid fa-envelope"></i></span>
            </label>
            <label class="inp">
                <input asp-for="Password" type="password" class="input-text" placeholder="&nbsp;" id="password">
                <label asp-for="Password" class="label"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
                <span class="input-icon"><i class="fa-solid fa-lock"></i></span>
            </label>
            <button type="submit" class="btn btn-login">Log in</button>
        </form>
        <p class="text-mute"><a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">Register as a new user?</a></p>
    
        <div class="line-breaker">
            <span class="line"></span>
            <span>or</span>
            <span class="line"></span>
        </div>
        @{
            var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
            if (loginProviders.Count == 0)
            {
                <div>
                    <p>
                        There are no external authentication services configured.
                    </p>
                </div>
            }
            else
            {
                @foreach (var provider in loginProviders)
                {
                    <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                        @if (provider.Name.ToLower() == "github") 
                        {
                            <button type="submit" class="btn btn-external" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                <img src="https://github.githubassets.com/images/modules/logos_page/GitHub-Logo.png" />
                            </button>
                        }
                        @if (provider.Name.ToLower() == "okta") 
                        {
                            <button type="submit" class="btn btn-external" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                <img src="https://www.okta.com/sites/default/files/media/image/2021-03/Logo_Okta_Blue_RGB.png" />
                            </button>
                        }     
                    </form>
                }
            }
        }
    </div>
</main>